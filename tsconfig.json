{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*.stories.ts", "src/**/*.stories.tsx"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,

    "declaration": true,

    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "jsx": "react"
  }
}
